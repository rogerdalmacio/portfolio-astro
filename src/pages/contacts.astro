---
import Layout from "../layouts/Layout.astro";

const contacts = [
    {
        name: 'Linkedin',
        url: 'https://www.linkedin.com/in/rogerdalmacio/',
    },
    {
        name: 'Upwork',
        url: 'https://www.upwork.com/freelancers/~0196037be9d908bf90?mp_source=share'
    }
];
---
<Layout>
    <section class="default-container default-padding py-12 text-text h-screen">
        <h1 class="text-2xl font-bold text-primary bulleted">Contacts</h1>
        <p class="text-xl mt-10">Behind every good project is a good conversation — let’s start one.</p>
        <ul class="mt-2 list-disc marker:text-highlight">
            {contacts.map(contact => (
                <li>
                    <a href={contact.url} target="_blank" class="text-highlight">{contact.name}</a>
                </li>
            ))}
        </ul>
        <p class="text-xl mt-10">Call me, email me — either way, I’ll be on the other end.</p>
        <ul class="mt-2 list-disc marker:text-highlight">
            <li>Phone: +639514412423</li>
            <li>Email: <a class="underline text-highlight" href="mailto:rogerdalmacio36@gmail.com?subject=Inquiry">rogerdalmacio36@gmail.com</a></li>
        </ul>
    </section>
</Layout>
