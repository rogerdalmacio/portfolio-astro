---
import '../styles/global.css'
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta lang="en-us" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="description" content="Hello I'm Roger Dalmacio and I'm a full-stack Laravel developer with a passion for turning ideas into scalable web applications.">

		<meta property="og:title" content="Roger Dalmacio - Full Stack Web Developer">
		<meta property="og:description" content="Hello I'm Roger Dalmacio and I'm a full-stack Laravel developer with a passion for turning ideas into scalable web applications.">
		<meta property="og:image" content="https://www.rogerdalmacio.com/favicon.ico">
		<meta property="og:url" content="https://www.rogerdalmacio.com">
		<meta property="og:type" content="website">

		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Roger Dalmacio - Full Stack Web Developer">
		<meta name="twitter:description" content="Hello I'm Roger Dalmacio and I'm a full-stack Laravel developer with a passion for turning ideas into scalable web applications.">
		<meta name="twitter:image" content="https://www.rogerdalmacio.com/favicon.ico">

		<title>Roger’s Notebook — Code, Projects, Stories</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Anonymous+Pro:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
	</head>
	<body class="font-pro bg-gray-50">
		<header>
			<Nav />
		</header>
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.bulleted::before {
		content: "•"; /* the bullet character */
		margin-right: 0.5rem; /* space between bullet and text */
		color: black; /* bullet color */
		font-size: 1rem; /* bullet size */
	}
</style>
